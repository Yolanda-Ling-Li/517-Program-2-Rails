<p id="notice"><%= notice %></p>

<h1>Check Out List</h1>

<table>
  <thead>
    <tr>
      <th>Borrowed Book ISBN</th>
      <th>Borrowed Book Title</th>
      <th>Student name</th>
      <th>Student email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @check_outs.each do |check_out| %>
      <tr>
        <% if current_admin%>
          <td><%= Book.find(check_out.book_id).isbn%></td>
          <td><%= Book.find(check_out.book_id).title%></td>
          <td><%= Student.find(check_out.student_id).name%></td>
          <td><%= Student.find(check_out.student_id).email%></td>
        <% elsif current_librarian and check_out.library_id == current_librarian.id%>
          <td><%= Book.find(check_out.book_id).isbn%></td>
          <td><%= Book.find(check_out.book_id).title%></td>
          <td><%= Student.find(check_out.student_id).name%></td>
          <td><%= Student.find(check_out.student_id).email%></td>
        <% elsif current_student and current_student.id == check_out.student_id%>
          <td><%= Book.find(check_out.book_id).isbn%></td>
          <td><%= Book.find(check_out.book_id).title%></td>
          <td><%= Student.find(check_out.student_id).name%></td>
          <td><%= Student.find(check_out.student_id).email%></td>
        <% end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Back', root_path %>
