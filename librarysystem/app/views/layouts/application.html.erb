<!DOCTYPE html>
<html>
  <head>
    <title>Librarysystem</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <h1>Online Library System</h1>

  <body>
    <%= link_to 'Front Page', root_path %> |
    <% if current_admin %>
    <%= link_to('Admin Logout', destroy_admin_session_path, :method => :delete) %> |
    <%= link_to('Admin Edit Account', edit_registration_path(:admin)) %>
    <% else %>
      <%= link_to('Admin Register', new_registration_path(:admin)) %> |
      <%= link_to('Admin Login', new_session_path(:admin)) %>
    <% end %>

    <% if current_student %>
    <%= link_to('Student Logout', destroy_student_session_path, :method => :delete) %> |
    <%= link_to('Student Edit Account', edit_registration_path(:student)) %>
    <% else %>
      <%= link_to('Student Register', new_registration_path(:student)) %> |
      <%= link_to('Student Login', new_session_path(:student)) %>
    <% end %>

    <% if current_librarian %>
    <%= link_to('Librarian Logout', destroy_user_session_path, :method => :delete) %> |
    <%= link_to('Librarian Edit Account', edit_registration_path(:librarian)) %>
    <% else %>
      <%= link_to('Librarian Register', new_registration_path(:librarian)) %> |
      <%= link_to('Librarian Login', new_session_path(:librarian)) %>
    <% end %>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>


    <br><br>

    <%= link_to "List all libraries", libraries_url %> <%= link_to "List all books", books_url %>

  </body>
</html>
