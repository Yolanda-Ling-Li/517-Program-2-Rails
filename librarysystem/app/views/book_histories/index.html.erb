<p id="notice"><%= notice %></p>

<h1>Book Histories</h1>

<table>
  <thead>
    <tr>
      <th>Borrow Student</th>
      <th>Borrow date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @book_histories.each do |book_history| %>
      <tr>
        <td><%= Student.find(book_history.student_id).email if book_history.book_id == params[:format].to_i%></td>
        <td><%= book_history.borrow_date if book_history.book_id == params[:format].to_i%></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Back', books_path%>
