<p id="notice"><%= notice %></p>

<h1>Bookmarks</h1>

<table>
  <thead>
    <tr>
      <th>Bookmarked Book ISBN</th>
      <th>Bookmarked Book Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookmarks.each do |bookmark| %>
      <tr>
        <% if current_student and bookmark.student_id==current_student.id%>
          <td><%= Book.find(bookmark.book_id).isbn%></td>
          <td><%= Book.find(bookmark.book_id).title%></td>
        <% end%>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Back', books_path %>
